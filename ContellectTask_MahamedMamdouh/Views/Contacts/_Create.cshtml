@model ContellectTask_MahamedMamdouh.Models.Contacts

<form asp-action="Create" method="post">
    <div class="col-12 mb-2">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-12 mb-2">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="col-12 mb-2">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="col-12 mb-2">
        <label asp-for="Notes" class="control-label"></label>
        <textarea cols="50" asp-for="Notes" class="form-control"></textarea>
    </div>
    <div class="border-top my-3 py-2">
        <button class="btn btn-success" type="submit">Save</button>
    </div>
    <input type="hidden" id="LastPage" name="LastPage" value="@ViewData["PageCount"]" />

</form>           